modules = ["nodejs-20", "web", "nix"]
run = "cd maestro-wallet-demo && chmod +x start.sh && ./start.sh"

hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
build = ["cd", "maestro-wallet-demo", "&&", "npm", "run", "build"]
run = ["sh", "-c", "cd maestro-wallet-demo && chmod +x start.sh && ./start.sh"]

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd maestro-wallet-demo && chmod +x start.sh && ./start.sh"
waitForPort = 5000
